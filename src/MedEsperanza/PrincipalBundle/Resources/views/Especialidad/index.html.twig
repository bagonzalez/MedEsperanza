<h1>Especialidad list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Fotobanner</th>
            <th>Id</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('establecimiento_especialidad', { 'id': entity.id }) }}">{{ entity.nombre }}</a></td>
            <td>{{ entity.descripcion }}</td>
            <td><img src="data:image/png;base64,{{ entity.fotobanner }}" /></td>
            <td>{{ entity.id }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('especialidad_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('especialidad_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('especialidad_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
